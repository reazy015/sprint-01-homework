root=true
[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=2
trim_trailing_whitespace=true
quote_type=single

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2


[*.jsx,*.tsx,*.js,*.ts, *.*.test.ts]
indent_style=space
indent_size=2
max_line_length=100

[{*.scss,*.css}]
indent_style=space
indent_size=2
max_line_length=100

[{*.yml,*.yaml}]
indent_style=space
indent_size=2

[tslint.json]
indent_style=space
indent_size=2

